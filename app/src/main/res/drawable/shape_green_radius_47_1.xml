<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_42c87f" />
            <corners android:radius="47dp" />
            <stroke
                android:width="1dp"
                android:color="#65CD95" />
            <gradient
                android:startColor="#42C87F"
                android:endColor="#3BB774"
                android:angle="-90"/>

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_bd" />
            <corners android:radius="47dp" />
            <stroke
                android:width="1dp"
                android:color="#CACACA" />

        </shape>
    </item>
</selector>