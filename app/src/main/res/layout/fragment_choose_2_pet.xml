<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.main.record.Choose2PetFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_choosePet_2_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_f0f2ef">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_choosePet_2_background"
            android:layout_width="0dp"
            android:layout_height="454dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/white_ff"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp"
            app:layout_constraintDimensionRatio="300:454"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_choosePet_2_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_choosePet_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/choosePet_header2"
                    style="@style/Typography.M15"
                    android:textColor="@color/grey_bd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_choosePet_title"
                    app:layout_constraintStart_toStartOf="@+id/tv_choosePet_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_choosePet_title" />

                <TextView
                    android:id="@+id/tv_choosePet_title"
                    style="@style/Typography.S18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="101dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="101dp"
                    android:text="@string/choosePet_header1"
                    android:textColor="@color/grey_4f"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_choosePet_2_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="44dp"
            android:layout_marginTop="63dp"
            android:background="@drawable/shape_green_radius_20"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="@string/choosePet_btn"
            android:textAppearance="@style/Typography.S20"
            android:textColor="#E6FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_choosePet_2_background" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>