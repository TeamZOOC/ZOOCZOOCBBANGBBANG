<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="memberInfo"
            type="org.sopt.zooczoocbbangbbang.data.remote.entity.mypage.ResponseMembersDto.Data.FamilyMember" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#F8F8F8"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginVertical="20dp"
            android:padding="1dp"
            app:strokeWidth="1dp"
            app:strokeColor="#888C86"
            android:id="@+id/img_pet"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_basic_profile"
            app:shapeAppearanceOverlay="@style/Style.CircleImageView.Half"
            android:layout_marginStart="35dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:text="사랑이"
            android:textColor="@color/green_888c86"
            style="@style/Zooc16SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pet"
            app:layout_constraintStart_toEndOf="@+id/img_pet"
            android:layout_marginStart="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>