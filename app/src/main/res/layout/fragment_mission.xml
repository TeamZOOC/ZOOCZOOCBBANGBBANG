<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewmodel"
            type="org.sopt.zooczoocbbangbbang.presentation.main.record.MissionViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.main.record.MissionFragment">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcv_mission_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="org.sopt.zooczoocbbangbbang.presentation.main.record.MissionViewPagerFragment" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_mission_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="69dp"
            android:clickable="@{viewmodel.buttonValidation}"
            android:background="@{viewmodel.buttonValidation ? @drawable/shape_green_radius_47 : @drawable/shape_grey_radius_47}"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="@string/button_next"
            android:textColor="@color/white"
            android:textAppearance="@style/Typography.S20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fcv_mission_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>