<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewmodel"
            type="org.sopt.zooczoocbbangbbang.presentation.main.record.MissionViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.main.record.MissionFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_mission_bgwhite"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shape_record_white_radius_24"
            android:backgroundTint="@color/white"
            app:layout_constraintDimensionRatio="314:477"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_mission_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="18dp"
                android:backgroundTint="#F5F5F5"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintDimensionRatio="289:212"
                app:layout_constraintEnd_toEndOf="@+id/cl_mission_bgwhite"
                app:layout_constraintStart_toStartOf="@+id/cl_mission_bgwhite"
                app:layout_constraintTop_toTopOf="@+id/cl_mission_bgwhite">

                <ImageView
                    android:id="@+id/iv_mission_imgbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="54dp"
                    android:layout_marginStart="91dp"
                    android:layout_marginEnd="102dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/img_record_photo_24" />

                <ImageView
                    android:id="@+id/iv_mission_bgimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/edt_record"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_rec_white2_radius_12"
                android:hint="@string/mission_hintText"
                android:text="@={viewmodel.missionText}"
                android:inputType="textMultiLine"
                android:paddingHorizontal="18dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:gravity="top"
                android:maxLength="70"
                android:textAppearance="@style/Typography.M14"
                android:textColorHint="#9C9898"
                android:lineSpacingExtra="5sp"
                app:layout_constraintBottom_toBottomOf="@+id/cl_mission_bgwhite"
                tools:ignore="TouchTargetSizeCheck"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_mission_photo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_mission_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="69dp"
            android:layout_marginBottom="44dp"
            android:clickable="@{viewmodel.buttonValidation}"
            android:background="@{viewmodel.buttonValidation ? @drawable/shape_green_radius_47 : @drawable/shape_grey_radius_47}"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="@string/record_button_text"
            android:textColor="@color/white"
            android:textAppearance="@style/Typography.S20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_mission_bgwhite" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>