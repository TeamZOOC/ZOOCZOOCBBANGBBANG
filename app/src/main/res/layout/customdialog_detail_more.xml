<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_radius_8"
        android:backgroundTint="@color/white_f8">

        <TextView
            android:text="삭제하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Typography.M15"
            android:textColor="@color/grey_55"
            android:layout_marginStart="18dp"
            android:layout_marginVertical="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_detail_more_delete" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_trash_can"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:paddingStart="1dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_detail_more_delete"
            app:layout_constraintTop_toTopOf="@id/tv_detail_more_delete"
            app:layout_constraintBottom_toBottomOf="@id/tv_detail_more_delete"
            android:id="@+id/iv_detail_more_trash_can" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>