<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.main.onboarding.OnboardingActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cst_onboarding_header"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <ImageView
                android:id="@+id/img_onboarding_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cst_onboarding_content"
            app:layout_constraintTop_toBottomOf="@id/cst_onboarding_header"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <ProgressBar
                android:id="@+id/pb_onboarding_progress"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                app:layout_constraintTop_toBottomOf="@id/pb_onboarding_progress"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="42dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:name="org.sopt.zooczoocbbangbbang.presentation.main.onboarding.profile.RoleInputFragment"
                android:id="@+id/fragmentContainerView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>