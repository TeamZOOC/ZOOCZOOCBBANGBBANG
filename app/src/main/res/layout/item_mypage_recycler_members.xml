<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="memberInfo"
            type="org.sopt.zooczoocbbangbbang.data.remote.entity.mypage.ResponseMembersDto.Data.FamilyMember" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_members"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/mypage_member"
            app:shapeAppearanceOverlay="@style/Style.CircleImageView.Half" />

        <TextView
            android:id="@+id/tv_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAppearance="@style/Zooc12Medium"
            android:textColor="#4F4F4F"
            android:textSize="12sp"
            android:text="구름 아빠"
            app:layout_constraintEnd_toEndOf="@+id/img_members"
            app:layout_constraintStart_toStartOf="@+id/img_members"
            app:layout_constraintTop_toBottomOf="@+id/img_members" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>